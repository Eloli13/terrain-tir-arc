# Configuration de la base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=terrain_tir_arc
DB_USER=tir_arc_user
DB_PASSWORD=votre_mot_de_passe_securise_changez_moi

# Clés de sécurité (CHANGER EN PRODUCTION)
# Générez des secrets forts avec: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGEZ_MOI_32_CARACTERES_MINIMUM_GENEREZ_UN_SECRET_FORT
JWT_REFRESH_SECRET=CHANGEZ_MOI_32_CARACTERES_MINIMUM_GENEREZ_UN_SECRET_FORT

# Configuration serveur
PORT=3000
NODE_ENV=development

# Configuration CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Configuration de sécurité
SESSION_SECRET=CHANGEZ_MOI_32_CARACTERES_MINIMUM_GENEREZ_UN_SECRET_FORT
BCRYPT_ROUNDS=12

# Configuration email (pour les notifications d'incidents)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@istres_sports_tialarc.fr

# Configuration de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Limites de taux (rate limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100